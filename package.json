{
  "name": "grocerybot-server",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Ugo Briasco",
  "scripts": {
    "start": "nodemon server",
    "test": "mocha ./server/*/__test__/*.spec.js --recursive || true",
    "coverage": "clear && mocha ./server/*/__test__/*.spec.js --recursive && istanbul cover _mocha $(find ./server/*/ -name \"*.js\" -not -path \"./node_modules/*\" -not -name \"*.spec.js\" -not -name \"*.utils.js\") || true && open coverage/lcov-report/index.html ",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.17.1",
    "bcrypt": "^1.0.3",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "eslint": "^4.13.1",
    "express": "^4.16.2",
    "express-validation": "^1.0.2",
    "express-validator": "^4.3.0",
    "joi": "^13.0.2",
    "jsonwebtoken": "^8.1.0",
    "mongoose": "^4.13.7",
    "nodemailer": "^4.4.1",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "mocha": "^4.0.1",
    "prettier": "^1.9.2",
    "sinon": "^4.1.3",
    "sinon-express-mock": "^1.3.1",
    "sinon-mongoose": "^2.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ugobriasco/grocerybot-server.git"
  }
}
